{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // ... any additional strictness flags
  },
  "include": ["src/**/*.ts", "**/*.ts"]  // or ["**/*.ts"] if you want to compile from multiple folders
}
